<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_graph"
            app:startDestination="@id/mainFragment">
    
    <fragment android:id="@+id/mainFragment"
              android:name="id.ebysofyan.jetpackexample.ui.main.MainFragment"
              android:label="main_fragment"
              tools:layout="@layout/main_fragment">
        <action android:id="@+id/action_mainFragment_to_detailFragment"
                app:destination="@id/detailFragment"/>
        <argument android:name="salam" app:argType="string"/>
    </fragment>
    
    <fragment android:id="@+id/detailFragment"
              android:name="id.ebysofyan.jetpackexample.ui.detail.DetailFragment"
              android:label="DetailFragment">
        <argument android:name="salam" app:argType="string"/>
    </fragment>
</navigation>